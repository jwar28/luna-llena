---
import { Icon } from 'astro-icon/components';
---

<section class='h-full max-sm:py-6'>
  <div class='flex flex-col items-center justify-center px-6 mx-auto lg:py-0'>
    <div
      class='w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800/60 dark:border-gray-700'>
      <div class='space-y-4 md:space-y-6 sm:p-8 p-5'>
        <h1
          class='text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white'>
          Metodo de pago
        </h1>
        <div
          class='flex flex-col items-center gap-3 sm:flex-row justify-between'>
          <a
            class='btn btn-neutral py-2 px-6 w-fit max-sm:w-full flex items-center gap-3 text-white'>
            <Icon name='card' />
            <p>Tarjeta</p>
          </a>
          <a
            class='btn btn-neutral py-2 px-6 w-fit max-sm:w-full flex items-center gap-3 text-white'>
            <Icon name='paypal' />
            <p>Paypal</p>
          </a>
          <a
            class='btn btn-neutral py-2 px-6 w-fit max-sm:w-full flex items-center gap-3 text-white'>
            <Icon name='apple' />
            <p>Apple</p>
          </a>
        </div>
        <form class='space-y-4 md:space-y-6' action='#'>
          <div>
            <label
              for='name'
              class='block mb-2 text-sm font-medium text-gray-900 dark:text-white'
              >Nombre</label
            >
            <input
              type='text'
              name='name'
              id='name'
              class='bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
              placeholder='John Doe'
              required=''
            />
          </div>
          <div>
            <label
              for='cardNumber'
              class='block mb-2 text-sm font-medium text-gray-900 dark:text-white'
              >Numero de tarjeta</label
            >
            <input
              type='number'
              name='cardNumber'
              id='cardNumber'
              placeholder='••••••••'
              class='bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
              required=''
            />
          </div>
          <div class='flex flex-col max-sm:gap-3 sm:flex-row justify-between'>
            <div class='flex flex-col'>
              <label
                for='expiryDate'
                class='block mb-2 text-sm font-medium text-gray-900 dark:text-white'
                >Fecha de expiracion</label
              >
              <input
                type='text'
                name='expiryDate'
                id='expiryDate'
                placeholder='MM/YY'
                class='bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
                required=''
              />
            </div>
            <div class='flex flex-col'>
              <label
                for='CVC'
                class='block mb-2 text-sm font-medium text-gray-900 dark:text-white'
                >CVC</label
              >
              <input
                type='number'
                name='cardCVC'
                id='cardCVC'
                placeholder='123'
                class='bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
                required=''
              />
            </div>
          </div>
          <a
            href='/success'
            class='btn btn-primary w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800'
            >Pagar</a
          >
        </form>
      </div>
    </div>
  </div>
</section>
